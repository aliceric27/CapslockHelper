{
  "manifest_version": 3,
  "name": "Caps Lock 狀態指示器",
  "version": "1.1",
  "description": "顯示 Caps Lock 的開啟/關閉狀態，可自定義顯示位置、提示文字和顯示時間",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "keyboard.png",
    "32": "keyboard.png",
    "48": "keyboard.png",
    "128": "keyboard.png"
  }
}