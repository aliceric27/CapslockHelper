{
  "manifest_version": 2,
  "name": "Caps Lock 狀態指示器",
  "version": "1.1",
  "description": "顯示 Caps Lock 的開啟/關閉狀態，可自定義顯示位置、提示文字和顯示時間",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}